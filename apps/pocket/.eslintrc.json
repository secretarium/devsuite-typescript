{
    "extends": [
        "../../.eslintrc.js"
    ],
    "ignorePatterns": [
        "!**/*",
        ".expo",
        "node_modules",
        "web-build"
    ],
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx",
                "*.js",
                "*.jsx"
            ],
            "rules": {
                "@typescript-eslint/ban-ts-comment": "off",
                "jsx-a11y/accessible-emoji": "off",
                "@nx/enforce-module-boundaries": [
                    "error",
                    {
                        "enforceBuildableLibDependency": true,
                        "allow": [],
                        "depConstraints": [
                            {
                                "sourceTag": "*",
                                "onlyDependOnLibsWithTags": [
                                    "*"
                                ]
                            }
                        ]
                    }
                ]
            },
            "globals": {
                "__CLIENT__": true,
                "__SERVER__": true,
                "__DEV__": true
            }
        },
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "rules": {}
        },
        {
            "files": [
                "*.js",
                "*.jsx"
            ],
            "rules": {}
        }
    ]
}