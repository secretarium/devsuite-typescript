{
    "name": "notifier",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/notifier/src",
    "projectType": "application",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "outputPath": "dist/apps/notifier",
                "main": "apps/notifier/src/main.ts",
                "tsConfig": "apps/notifier/tsconfig.app.json",
                "assets": [
                    "apps/notifier/src/assets"
                ],
                "generatePackageJson": true,
                "thirdParty": true,
                "esbuildConfig": "apps/notifier/esbuild.config.cjs"
            }
        },
        "serve": {
            "executor": "@nx/js:node",
            "options": {
                "buildTarget": "notifier:build"
            },
            "configurations": {
                "production": {
                    "buildTarget": "notifier:build:production"
                }
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": [
                "{options.outputFile}"
            ]
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": [
                "{workspaceRoot}/coverage/{projectRoot}"
            ],
            "options": {
                "jestConfig": "apps/notifier/jest.config.ts"
            }
        },
        "docker-build": {
            "dependsOn": [
                "build"
            ],
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "docker build -f apps/notifier/Dockerfile . -t notifier:latest"
                ]
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "preset": "conventional",
                "trackDeps": true,
                "changelogHeader": "# Changelog",
                "tagPrefix": "{projectName}@",
                "commitMessageFormat": "chore({projectName}): Release version ${version}",
                "postTargets": [
                    "notifier:build"
                ]
            }
        }
    }
}