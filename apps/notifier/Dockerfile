# Run the container with `docker run -p 3000:3000 -t notifier`.
FROM docker.io/node:22-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system notifier && \
    adduser --system -G notifier notifier

COPY dist/apps/notifier notifier
RUN chown -R notifier:notifier .
RUN cd notifier && yarn install --no-cache && yarn cache clean

EXPOSE 3000

CMD [ "node", "notifier" ]
