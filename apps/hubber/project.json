{
    "name": "hubber",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/hubber/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nrwl/node:webpack",
            "inputs": [
                {
                    "fileset": "{workspaceRoot}/node_modules/.prisma/**/*.ts"
                }
            ],
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "outputPath": "dist/apps/hubber",
                "main": "apps/hubber/src/main.ts",
                "tsConfig": "apps/hubber/tsconfig.app.json",
                "assets": [
                    "apps/hubber/src/i18n/locales"
                ],
                "generatePackageJson": true
            },
            "configurations": {
                "production": {
                    "optimization": true,
                    "extractLicenses": true,
                    "inspect": false,
                    "fileReplacements": [
                        {
                            "replace": "apps/hubber/src/environments/environment.ts",
                            "with": "apps/hubber/src/environments/environment.prod.ts"
                        }
                    ]
                }
            }
        },
        "serve": {
            "executor": "@nrwl/node:node",
            "inputs": [
                {
                    "fileset": "{workspaceRoot}/node_modules/.prisma/**/*.ts"
                }
            ],
            "options": {
                "buildTarget": "hubber:build"
            },
            "configurations": {
                "production": {
                    "buildTarget": "hubber:build:production"
                }
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "apps/hubber/**/*.ts"
                ]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": [
                "{workspaceRoot}/coverage/apps/hubber"
            ],
            "options": {
                "jestConfig": "apps/hubber/jest.config.ts",
                "passWithNoTests": true
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "preset": "conventional",
                "trackDeps": true
            }
        },
        "docker-build": {
            "dependsOn": [
                {
                    "projects": "self",
                    "target": "build"
                },
                {
                    "projects": "dependencies",
                    "target": "build"
                }
            ],
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "docker build -f apps/hubber/Dockerfile . -t hubber:latest"
                ]
            }
        }
    },
    "implicitDependencies": [
        "klave"
    ],
    "tags": []
}