{
    "name": "trustless-app-creator",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/trustless-app-creator/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:swc",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "buildableProjectDepsInPackageJsonType": "dependencies",
                "outputPath": "dist/apps/trustless-app-creator",
                "tsConfig": "apps/trustless-app-creator/tsconfig.lib.json",
                "packageJson": "apps/trustless-app-creator/package.json",
                "main": "apps/trustless-app-creator/src/index.ts",
                "assets": [
                    {
                        "glob": "**/(\\.*|*)",
                        "input": "apps/trustless-app-creator/template",
                        "output": "template",
                        "ignore": []
                    },
                    "apps/trustless-app-creator/bin/*",
                    "apps/trustless-app-creator/*.md"
                ]
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "apps/trustless-app-creator/**/*.ts"
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": [
                "{workspaceRoot}/coverage/{projectRoot}"
            ],
            "options": {
                "jestConfig": "apps/trustless-app-creator/jest.config.ts",
                "passWithNoTests": true
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "preset": "conventional",
                "trackDeps": true,
                "tagPrefix": "${projectName}@",
                "commitMessageFormat": "chore(${projectName}): Release version ${version}",
                "postTargets": [
                    "trustless-app-creator:build"
                ]
            }
        }
    },
    "tags": []
}