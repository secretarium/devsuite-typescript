{
    "name": "klave-compiler",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/klave-compiler/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "outputPath": "dist/libs/klave-compiler",
                "main": "libs/klave-compiler/src/index.ts",
                "tsConfig": "libs/klave-compiler/tsconfig.lib.json",
                "assets": [
                    "libs/klave-compiler/*.md",
                    "libs/klave-compiler/src/*.mjs"
                ]
            },
            "configurations": {
                "development": {
                    "watch": true
                }
            }
        },
        "publish": {
            "command": "node tools/scripts/publish.mjs klave-compiler {args.ver} {args.tag}",
            "dependsOn": [
                "build"
            ]
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "libs/klave-compiler/**/*.ts",
                    "libs/klave-compiler/package.json"
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": [
                "{workspaceRoot}/coverage/{projectRoot}"
            ],
            "options": {
                "jestConfig": "libs/klave-compiler/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "preset": "conventional",
                "trackDeps": true,
                "changelogHeader": "# Changelog",
                "tagPrefix": "{projectName}@",
                "commitMessageFormat": "chore({projectName}): Release version ${version}",
                "postTargets": [
                    "klave-compiler:build"
                ]
            }
        }
    },
    "tags": []
}