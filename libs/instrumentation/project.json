{
    "name": "instrumentation",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/instrumentation/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:swc",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "outputPath": "dist/libs/instrumentation",
                "tsConfig": "libs/instrumentation/tsconfig.lib.json",
                "packageJson": "libs/instrumentation/package.json",
                "main": "libs/instrumentation/src/index.ts",
                "assets": [
                    "libs/instrumentation/*.md"
                ]
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "libs/instrumentation/**/*.ts"
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": [
                "{workspaceRoot}/coverage/{projectRoot}"
            ],
            "options": {
                "jestConfig": "libs/instrumentation/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "preset": "conventional",
                "trackDeps": true,
                "changelogHeader": "# Changelog",
                "tagPrefix": "${projectName}@",
                "commitMessageFormat": "chore(${projectName}): Release version ${version}",
                "postTargets": [
                    "instrumentation:build"
                ]
            }
        },
        "publish": {
            "dependsOn": [
                "build"
            ],
            "executor": "nx:run-commands",
            "options": {
                "cwd": "dist/libs/instrumentation",
                "commands": [
                    "yarn publish --access public"
                ]
            }
        }
    },
    "tags": []
}