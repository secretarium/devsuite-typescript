{
    "extends": [
        "../../.eslintrc.cjs"
    ],
    "ignorePatterns": [
        "!**/*"
    ],
    "globals": {
        "__DEBUG_BUILD__": "readonly",
        "__SENTRY_DEBUG__": "readonly"
    },
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx",
                "*.js",
                "*.jsx"
            ],
            "rules": {
                "@nx/enforce-module-boundaries": [
                    "error",
                    {
                        "allow": [],
                        "depConstraints": [
                            {
                                "sourceTag": "*",
                                "onlyDependOnLibsWithTags": [
                                    "*"
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "parserOptions": {
                "project": [
                    "libs/instrumentation/tsconfig.*?.json"
                ]
            },
            "rules": {}
        },
        {
            "files": [
                "*.js",
                "*.jsx"
            ],
            "rules": {}
        },
        {
            "files": [
                "*.json"
            ],
            "parser": "jsonc-eslint-parser",
            "rules": {
                "@nx/dependency-checks": "error"
            }
        }
    ]
}