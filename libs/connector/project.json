{
    "name": "connector",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/connector/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "outputPath": "dist/libs/connector",
                "tsConfig": "libs/connector/tsconfig.lib.json",
                "packageJson": "libs/connector/package.json",
                "main": "libs/connector/src/index.ts",
                "assets": [
                    "libs/connector/*.md"
                ]
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "options": {
                "lintFilePatterns": [
                    "libs/connector/**/*.{ts,tsx,js,jsx,json}",
                    "libs/connector/package.json"
                ]
            },
            "outputs": [
                "{options.outputFile}"
            ]
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": [
                "{workspaceRoot}/coverage/libs/connector"
            ],
            "options": {
                "jestConfig": "libs/connector/jest.config.ts",
                "passWithNoTests": true
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "preset": "conventional",
                "trackDeps": true,
                "changelogHeader": "# Changelog",
                "tagPrefix": "{projectName}@",
                "commitMessageFormat": "chore({projectName}): Release version ${version}",
                "postTargets": [
                    "connector:build"
                ]
            }
        },
        "publish": {
            "dependsOn": [
                "build"
            ],
            "executor": "nx:run-commands",
            "options": {
                "cwd": "dist/libs/connector",
                "commands": [
                    "yarn publish --access public"
                ]
            }
        }
    },
    "tags": [
        "scope:sdk"
    ]
}